{
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:app": "cd web && yarn run start",
    "build:app": "cd web && yarn run build:app",
    "start:server": "cd server && yarn run start",
    "build:server": "cd server && yarn run build",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "pushd server && yarn run dev && popd",
    "dev:app": "pushd web && yarn run start && popd",
    "install:server": "cd server && yarn install",
    "install:app": "cd web && yarn install",
    "pre:build:app": "yarn run install:web",
    "pre:build:server": "yarn run install:server",
    "format": "npx prettier '*/**/*.{ts,tsx}' --write"
  },
  "dependencies": {
    "apollo-server": "^2.9.0",
    "dotenv": "^8.0.0",
    "electron": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "slate-history": "^0.55.3",
    "slate-md-editor": "^1.5.4"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "typescript": "^3.7.5"
  }
}
