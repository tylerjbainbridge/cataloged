{
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*"
    ]
  },
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:web": "yarn workspace cataloged-web run start",
    "start:server": "yarn workspace cataloged-server run start",
    "build:web": "yarn install && yarn workspace cataloged-web run build",
    "build:landing-page": "yarn install && yarn workspace cataloged-web run build",
    "build:server": "yarn install && yarn workspace cataloged-server run build",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "yarn workspace server run dev",
    "dev:web": "yarn workspace web run dev",
    "format": "npx prettier '*/**/*.{ts,tsx}' --write"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "prettier": "^1.18.2",
    "typescript": "^3.7.5"
  },
  "name": "cataloged"
}
