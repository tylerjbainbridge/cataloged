{
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:app": "pushd web && npm run start && popd",
    "build:app": "pushd web && npm run build:app && popd",
    "start:server": "pushd server && npm run start && popd",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "pushd server && npm run dev && popd",
    "dev:app": "pushd web && npm run start && popd",
    "install:server": "pushd server && yarn install && popd",
    "install:web": "pushd web && yarn install && popd",
    "format": "npx prettier '*/**/*.{ts,tsx}' --write",
    "postinstall": "npm-run-all --parallel install:*"
  },
  "dependencies": {
    "apollo-server": "^2.9.0",
    "dotenv": "^8.0.0",
    "electron": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "slate-history": "^0.55.3",
    "slate-md-editor": "^1.5.4"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "typescript": "^3.7.5"
  }
}
