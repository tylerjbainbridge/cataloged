{
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:server": "pushd server && npm run start && popd",
    "start:app": "pushd web && npm run start && popd",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "pushd server && npm run dev && popd",
    "dev:app": "pushd web && npm run start && popd",
    "install:server": "pushd server && npm install && popd",
    "install:web": "pushd web && npm install && popd",
    "format": "npx prettier '*/**/*.{ts,tsx}' --write",
    "postinstall": "npm-run-all --parallel install:*"
  },
  "dependencies": {
    "apollo-server": "^2.9.0",
    "dotenv": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "react-hook-form": "^3.23.3",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/yup": "^0.26.23",
    "prettier": "^1.18.2"
  }
}
