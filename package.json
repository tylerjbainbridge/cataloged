{
  "private": true,
  "workspaces": {
    "packages": [
      "cataloged-server",
      "cataloged-mobile",
      "cataloged-shared",
      "cataloged-web",
      "cataloged-landing-page",
      "cataloged-extension"
    ]
  },
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:web": "yarn workspaces cataloged-web run start",
    "start:server": "yarn workspaces cataloged-server run start",
    "build:web": "yarn install && yarn workspaces cataloged-web run build",
    "build:landing-page": "yarn install && yarn workspaces cataloged-web run build",
    "build:server": "yarn install && yarn workspaces cataloged-server run build",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "yarn workspaces server run dev",
    "dev:web": "yarn workspaces web run dev",
    "format": "npx prettier '*/**/*.{ts,tsx}' --write"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "prettier": "^1.18.2",
    "typescript": "^3.7.5"
  },
  "name": "cataloged"
}
